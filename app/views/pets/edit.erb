
<h1>Update Owner</h1>

<h2>Edits for <%= @pet.name %></h2>

  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Owner's Name:</label>
    <br>
    <input type="text" name="pet[name]" value="<%= @pet.name %>">

    <br>
    <p>Select an existing pet or create a new one below.</p>


    <h3>Existing owner</h3>
    <% Owner.all.each do |pet| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input><br>
  <% end %>
  <br>



    <input type="submit" value="Update Owner">
  </form>
